{
  "name": "@opendxl/node-red-contrib-dxl",
  "version": "0.1.0",
  "author": "McAfee, LLC",
  "description": "DXL nodes for Node-RED",
  "license": "Apache-2.0",
  "keywords": [
    "node-red",
    "opendxl",
    "dxl",
    "mcafee"
  ],
  "files": [
    "lib",
    "nodes",
    "examples",
    "LICENSE",
    "README.md"
  ],
  "engines": {
    "node": ">=4.0.0"
  },
  "dependencies": {
    "@opendxl/dxl-client": "^0.0.1",
    "@opendxl/dxl-bootstrap": "^0.1.0",
    "safe-buffer": "^5.1.1"
  },
  "devDependencies": {
    "archiver": "^2.1.1",
    "commander": "^2.13.0",
    "express": "^4.16.2",
    "jsdoc": "^3.5.5",
    "jshint": "^2.9.5",
    "eslint-plugin-html": "^3.2.2",
    "mocha": "^4.1.0",
    "nock": "^9.1.6",
    "node-red": "^0.18.0",
    "rimraf": "^2.6.2",
    "should": "^13.2.1",
    "sinon": "^4.1.4",
    "standard": "^10.0.3",
    "snazzy": "^7.0.0",
    "supertest": "^3.0.0",
    "when": "^3.7.8"
  },
  "eslintConfig": {},
  "main": "index.js",
  "repository": {
    "type": "git",
    "url": "git://github.com/opendxl/node-red-contrib-dxl.git"
  },
  "node-red": {
    "nodes": {
      "dxl-client": "./nodes/dxl-client.js",
      "dxl-event-in": "./nodes/dxl-event-in.js",
      "dxl-event-out": "./nodes/dxl-event-out.js",
      "dxl-request": "./nodes/dxl-request.js",
      "dxl-response": "./nodes/dxl-response.js",
      "dxl-service": "./nodes/dxl-service.js"
    }
  },
  "scripts": {
    "remove-config-node": "scripts/remove-config-node.js",
    "predist": "npm install && rimraf *.tgz",
    "dist": "npm pack && npm run doc && node scripts/dist.js",
    "test": "mocha --recursive",
    "lint": "npm run lint:jshint && npm run lint:standard",
    "lint:jshint": "jshint lib test",
    "lint:standard": "standard \"**/*.html\" \"**/*.js\" | snazzy",
    "preci": "npm run lint",
    "ci": "npm run test",
    "predoc": "rimraf out/jsdoc",
    "doc": "jsdoc -c ./doc/conf.json doc/index.md -r lib/ -u doc/sdk -d out/jsdoc",
    "postdoc": "node scripts/postdoc.js"
  },
  "standard": {
    "env": [
      "mocha"
    ],
    "globals": [
      "DXL",
      "RED",
      "$"
    ],
    "ignore": [
      "test/node-red-helper.js"
    ],
    "plugins": [
      "html"
    ]
  }
}
